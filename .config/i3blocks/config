# Temperature
#
# Support multiple chips, though lm-sensors.
# The script may be called with -w and -c switches to specify thresholds,
# see the script for details.
[temperature]
interval=10
separator=false
#label=TEMP

[load_average]
interval=10

# Memory usage
#
# The type defaults to "mem" if the instance is not specified.
[memory]
label=MEM
separator=false
interval=30
color=#3182BD

[memory]
label=S
instance=swap
separator=false
interval=3600
#label=SWAP

